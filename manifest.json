{
    "manifest_version": 2,
    "name": "HID control prevention",
    "version": "1.0",
    "icons": {
        "16": "assets/icons/16.png",
        "32": "assets/icons/32.png",
        "48": "assets/icons/48.png",
        "128": "assets/icons/128.png"
    },
    
    "default_locale": "en",
    
    "browser_action": {
        "default_popup": "popup/index.html"
    },

    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "content-scripts.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start"
        }
    ],
    
    "permissions": [
        "storage",
        "<all_urls>"
    ]
}
