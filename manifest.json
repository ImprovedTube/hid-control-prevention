{
    "manifest_version": 2,
    "name": "HID control prevention",
    "version": "0.61",
    
    "default_locale": "en",
    
    "browser_action": {
        "default_popup": "popup/index.html"
    },

    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "content-scripts.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start"
        }
    ],
    
    "permissions": [
        "storage",
        "<all_urls>"
    ]
}
